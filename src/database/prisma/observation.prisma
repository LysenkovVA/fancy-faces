model Observation {
  id String @id @default(cuid())

  viewType   ViewType? @relation(fields: [viewTypeId], references: [id])
  viewTypeId String?

  eyewitnessCharacteristics String?
  anatomicCharacteristics   String?
  functionalCharacteristics String?

  fullFaceSubject      Subject @relation(name: "fullFace", fields: [fullFaceSubjectId], references: [id])
  fullFaceSubjectId    String  @unique
  profileFaceSubjects  Subject @relation(name: "profileFace", fields: [profileFaceSubjectId], references: [id])
  profileFaceSubjectId String  @unique

  // Служебные поля
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("observation")
}
